{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5",
      "es2015.collection",
      "es2015.iterable"
    ],

    "paths": {
      "_components/*": ["components/*"],
      "_atoms/*": ["atoms/*"],
      "_hooks/*": ["hooks/*"],
      "_services/*": ["services/*"],
      "_utils/*": ["utils/*"],
      "_styles/*": ["styles/*"],
      "_icons/*": ["atoms/Icons/*"],
      "_stores/*": ["stores/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
